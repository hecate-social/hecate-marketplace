%%% Root rebar.config for hecate-marketplaced (Marketplace daemon)
{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
    %% Event sourcing stack
    {reckon_db, "1.3.0"},
    {evoq, "1.3.1"},
    {reckon_evoq, "1.1.4"},

    %% HTTP server
    {cowboy, "2.12.0"},

    %% SQLite (read models)
    {esqlite, "0.8.8"}
]}.

{relx, [
    {release, {hecate_marketplaced, "0.1.0"}, [
        %% Core daemon
        hecate_marketplaced,

        %% Event sourcing stack
        reckon_db,
        evoq,
        reckon_evoq,

        %% Plugin lifecycle (CMD)
        guide_plugin_lifecycle,

        %% Marketplace queries (QRY)
        query_marketplace,

        %% External deps
        sasl
    ]},

    {mode, dev},
    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true},
    {sys_config, "config/sys.config"},
    {vm_args, "config/vm.args"}
]}.

{profiles, [
    {prod, [
        {relx, [
            {mode, prod},
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]},
    {test, [
        {deps, [
            {meck, "0.9.2"}
        ]}
    ]}
]}.

{project_plugins, [
    rebar3_ex_doc
]}.

{ex_doc, [
    {source_url, <<"https://github.com/hecate-social/hecate-marketplace">>},
    {extras, [<<"README.md">>]},
    {main, <<"README.md">>}
]}.

{hex, [{doc, ex_doc}]}.

{dialyzer, [
    {warnings, [
        error_handling
    ]},
    {plt_extra_apps, [
        cowboy, cowlib, ranch, esqlite,
        reckon_evoq, evoq
    ]},
    {exclude_apps, [
        reckon_db,
        reckon_gater,
        khepri,
        ra,
        horus,
        aten,
        seshat,
        gen_batch_server
    ]}
]}.
